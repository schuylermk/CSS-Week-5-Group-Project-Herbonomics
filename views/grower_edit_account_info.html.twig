  <body>
      {% include '/includes/header.html.twig' %}
      <main>
        <h1>Edit your account details:</h1>

        <form action="/grower/{{ grower.getId }}/edit_account_info" method="post">
          <input name="_method" type="hidden" value="patch">

          <label for="name">Update Name:</label>
          <input id="name" name="name" type="text" value="{{ grower.getName }}">

          <label for="description">Update Website:</label>
          <input id="website" name="website" type="text" value="{{ grower.getWebsite }}">

          <label for="website">Update Email:</label>
          <input id="email" name="email" type="text" value="{{ grower.getEmail }}">

          <label for="location">Update Username:</label>
          <input id="username" name="username" type="text" value="{{ grower.getUsername }}">

          <label for="phone">Update Password:</label>
          <input id="password" name="password" type="text"value="{{ grower.getPassword }}">

          <button type="submit">Submit</button>
        </form>

      </main>

